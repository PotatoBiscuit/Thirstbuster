package com.CS477.drinkandgo;

import android.content.Context;
import android.util.AttributeSet;
import android.widget.RelativeLayout;
import android.widget.TextView;

public class VenueLayout extends RelativeLayout 
{
	public VenueLayout(Context context, Venue venue, LayoutParams params) 
	{
		super(context);
		
		TextView name = new TextView(context);
		name.setText(venue.getName());
		name.setId(1);
		
		TextView desc = new TextView(context);
		desc.setText(venue.getAddress());
		desc.setId(2);	
		
		params.addRule(ALIGN_PARENT_TOP);
		params.addRule(ABOVE, 2);
		addView(name, params);
		
		params.addRule(ALIGN_PARENT_TOP, 0);
		params.addRule(BELOW, 1);
		addView(desc, params);
	}

}
